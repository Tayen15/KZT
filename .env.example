# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id
CLIENT_SECRET=your_discord_client_secret

# Database Configuration (MongoDB Atlas)
# Format: mongodb+srv://USERNAME:PASSWORD@CLUSTER_HOST/DATABASE_NAME?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://user:password@cluster0.xxxxx.mongodb.net/kzt_bot?retryWrites=true&w=majority



# Session Configuration
SESSION_SECRET=your_random_session_secret_here

# Dashboard Configuration
CALLBACK_URL=http://localhost:3000/auth/discord/callback
DASHBOARD_URL=http://localhost:3000

# Server Configuration
PORT=3000
NODE_ENV=development

# Genius Lyrics API (optional)
GENIUS_CLIENT_ID=your_genius_client_id
GENIUS_API_TOKEN=your_genius_api_token

# Heroku Specific (Set automatically by Heroku, leave empty for local)
# HEROKU_APP_NAME=your-app-name

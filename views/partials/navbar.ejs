<nav class="bg-[#23272f] border-b border-[#3a3f4b] sticky top-0 z-50">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <a href="/" class="text-2xl font-bold text-[#5865F2] hover:text-[#4752c4] transition-colors">
                ðŸ¤– ByteBot
            </a>
            
            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-8">
                <a href="/" class="text-[#b9bbbe] hover:text-white transition-colors">Home</a>
                <a href="/#features" class="text-[#b9bbbe] hover:text-white transition-colors">Features</a>
                
                <% if (isAuthenticated) { %>
                    <a href="/dashboard" class="text-[#b9bbbe] hover:text-white transition-colors">Dashboard</a>
                    
                    <!-- User Dropdown -->
                    <div class="flex items-center space-x-3">
                        <% if (user.avatar) { %>
                            <img src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.png" 
                                 alt="<%= user.username %>"
                                 class="w-8 h-8 rounded-full">
                        <% } else { %>
                            <div class="w-8 h-8 rounded-full bg-[#5865F2] flex items-center justify-center text-white font-bold">
                                <%= user.username.charAt(0).toUpperCase() %>
                            </div>
                        <% } %>
                        <span class="text-white"><%= user.username %></span>
                        <a href="/auth/logout" 
                           class="px-4 py-2 bg-[#2b2f38] hover:bg-[#32363f] border border-[#3a3f4b] rounded text-white transition-colors">
                            Logout
                        </a>
                    </div>
                <% } else { %>
                    <a href="/auth/login" 
                       class="px-6 py-2 bg-[#5865F2] hover:bg-[#4752c4] rounded font-semibold text-white transition-colors">
                        Login with Discord
                    </a>
                <% } %>
            </div>
            
            <!-- Mobile Menu Button -->
            <button class="md:hidden text-white" onclick="toggleMobileMenu()">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
            </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden pb-4">
            <a href="/" class="block py-2 text-[#b9bbbe] hover:text-white">Home</a>
            <a href="/#features" class="block py-2 text-[#b9bbbe] hover:text-white">Features</a>
            
            <% if (isAuthenticated) { %>
                <a href="/dashboard" class="block py-2 text-[#b9bbbe] hover:text-white">Dashboard</a>
                <a href="/auth/logout" class="block py-2 text-[#b9bbbe] hover:text-white">Logout</a>
            <% } else { %>
                <a href="/auth/login" class="block py-2 text-[#5865F2] font-semibold">Login with Discord</a>
            <% } %>
        </div>
    </div>
</nav>

<script>
function toggleMobileMenu() {
    const menu = document.getElementById('mobileMenu');
    menu.classList.toggle('hidden');
}
</script>

<nav class="bg-dark-secondary border-b border-border-dark sticky top-0 z-50 backdrop-blur-sm bg-opacity-95">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center h-16">
            <!-- Logo -->
            <a href="/" class="text-2xl font-bold text-discord hover:text-discord-hover transition-colors">
                ByteBot
            </a>
            
            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-6">
                <a href="/" class="text-text-secondary hover:text-white transition-colors">Home</a>
                <a href="/commands" class="text-text-secondary hover:text-white transition-colors">Commands</a>
                
                <% if (isAuthenticated) { %>
                    <a href="/dashboard" class="text-text-secondary hover:text-white transition-colors">Dashboard</a>
                    
                    <!-- User Dropdown -->
                    <div class="flex items-center space-x-3">
                        <% if (user.avatar) { %>
                            <img src="https://cdn.discordapp.com/avatars/<%= user.discordId %>/<%= user.avatar %>.png" 
                                 alt="<%= user.username %>"
                                 class="w-8 h-8 rounded-full border-2 border-discord">
                        <% } else { %>
                            <div class="w-8 h-8 rounded-full bg-discord flex items-center justify-center text-white font-bold">
                                <%= user.username.charAt(0).toUpperCase() %>
                            </div>
                        <% } %>
                        <span class="text-white font-medium"><%= user.username %></span>
                        <a href="/auth/logout" 
                           class="px-4 py-2 bg-dark-card hover:bg-dark-hover border border-border-dark rounded text-white transition-colors">
                            Logout
                        </a>
                    </div>
                <% } else { %>
                    <a href="/auth/login" 
                       class="px-6 py-2 bg-discord hover:bg-discord-hover rounded font-semibold text-white transition-all duration-200">
                        Login
                    </a>
                <% } %>
            </div>
            
            <!-- Mobile Menu Button -->
            <button class="md:hidden text-white" onclick="toggleMobileMenu()">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
            </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden pb-4 space-y-2">
            <a href="/" class="block py-2 text-text-secondary hover:text-white transition-colors">Home</a>
            <a href="/commands" class="block py-2 text-text-secondary hover:text-white transition-colors">Commands</a>
            
            <% if (isAuthenticated) { %>
                <a href="/dashboard" class="block py-2 text-text-secondary hover:text-white transition-colors">Dashboard</a>
                <a href="/auth/logout" class="block py-2 text-text-secondary hover:text-white transition-colors">Logout</a>
            <% } else { %>
                <a href="/auth/login" class="block py-2 text-discord font-semibold">Login</a>
            <% } %>
        </div>
    </div>
</nav>

<script>
function toggleMobileMenu() {
    const menu = document.getElementById('mobileMenu');
    menu.classList.toggle('hidden');
}
</script>

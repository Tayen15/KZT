<!-- Form Card Component -->
<!-- Usage: 
<%- include('../components/form-card', { 
    icon: '<svg>...</svg>', 
    title: 'Card Title', 
    description: 'Card description',
    content: 'HTML content of the card body'
}) %> 
-->

<div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-xl p-6 hover:border-[#5865F2]/50 transition-all duration-300">
    <!-- Card Header -->
    <div class="flex items-center gap-3 mb-4">
        <div class="p-2 bg-[#5865F2]/10 rounded-lg">
            <%- icon %>
        </div>
        <div>
            <h2 class="text-lg font-semibold text-white"><%= title %></h2>
            <% if (typeof description !== 'undefined' && description) { %>
            <p class="text-[#b9bbbe] text-sm"><%= description %></p>
            <% } %>
        </div>
    </div>

    <!-- Card Body -->
    <div class="space-y-4">
        <%- content %>
    </div>
</div>

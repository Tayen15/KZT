<!-- Status Badge Component -->
<!-- Usage: <%- include('../components/status-badge', { enabled: settings.enabled, enabledText: 'Active', disabledText: 'Inactive' }) %> -->

<% if (enabled) { %>
<div class="inline-flex items-center gap-1.5 bg-[#57F287]/10 border border-[#57F287]/30 rounded-lg px-2 py-1">
    <svg class="w-3 h-3 text-[#57F287]" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
    </svg>
    <span class="text-[#57F287] text-xs font-semibold"><%= enabledText || 'Enabled' %></span>
</div>
<% } else { %>
<div class="inline-flex items-center gap-1.5 bg-[#b9bbbe]/10 border border-[#b9bbbe]/30 rounded-lg px-2 py-1">
    <svg class="w-3 h-3 text-[#b9bbbe]" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
    </svg>
    <span class="text-[#b9bbbe] text-xs font-semibold"><%= disabledText || 'Disabled' %></span>
</div>
<% } %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bot Statistics - ByteBot</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-[#1a1d23] text-white min-h-screen">
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-8 max-w-7xl">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center gap-4 mb-4">
                <a href="/dashboard/owner" class="text-[#b9bbbe] hover:text-[#5865F2] transition-colors p-2 hover:bg-[#2b2f38] rounded-lg">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                <div>
                    <h1 class="text-4xl font-bold mb-2">ðŸ“Š Bot Statistics</h1>
                    <p class="text-[#b9bbbe]">Detailed analytics and performance metrics</p>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                <div class="flex items-center justify-between mb-3">
                    <div class="bg-[#5865F2]/20 p-3 rounded-lg">
                        <svg class="w-6 h-6 text-[#5865F2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                    <span class="text-3xl font-bold text-[#5865F2]"><%= stats.guilds %></span>
                </div>
                <h3 class="text-sm text-[#b9bbbe] mb-1">Discord Servers</h3>
                <p class="text-xs text-[#b9bbbe]">Active guilds in cache</p>
            </div>

            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                <div class="flex items-center justify-between mb-3">
                    <div class="bg-purple-500/20 p-3 rounded-lg">
                        <svg class="w-6 h-6 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                    </div>
                    <span class="text-3xl font-bold text-purple-500"><%= stats.users %></span>
                </div>
                <h3 class="text-sm text-[#b9bbbe] mb-1">Total Users</h3>
                <p class="text-xs text-[#b9bbbe]">Cached Discord users</p>
            </div>

            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                <div class="flex items-center justify-between mb-3">
                    <div class="bg-[#57F287]/20 p-3 rounded-lg">
                        <svg class="w-6 h-6 text-[#57F287]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                        </svg>
                    </div>
                    <span class="text-3xl font-bold text-[#57F287]"><%= stats.channels %></span>
                </div>
                <h3 class="text-sm text-[#b9bbbe] mb-1">Channels</h3>
                <p class="text-xs text-[#b9bbbe]">All channel types</p>
            </div>

            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                <div class="flex items-center justify-between mb-3">
                    <div class="bg-[#FEE75C]/20 p-3 rounded-lg">
                        <svg class="w-6 h-6 text-[#FEE75C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                        </svg>
                    </div>
                    <span class="text-3xl font-bold text-[#FEE75C]"><%= stats.commands %></span>
                </div>
                <h3 class="text-sm text-[#b9bbbe] mb-1">Commands</h3>
                <p class="text-xs text-[#b9bbbe]">Registered slash commands</p>
            </div>
        </div>

        <!-- Performance Metrics -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                <h2 class="text-xl font-bold mb-6">Performance</h2>
                <div class="space-y-4">
                    <div>
                        <div class="flex items-center justify-between mb-2">
                            <span class="text-sm text-[#b9bbbe]">Uptime</span>
                            <span class="text-sm font-semibold"><%= formatUptime(stats.uptime) %></span>
                        </div>
                        <div class="w-full bg-[#1a1d23] rounded-full h-2">
                            <div class="bg-[#57F287] h-2 rounded-full" style="width: 100%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex items-center justify-between mb-2">
                            <span class="text-sm text-[#b9bbbe]">WebSocket Ping</span>
                            <span class="text-sm font-semibold <%= stats.ping < 100 ? 'text-[#57F287]' : stats.ping < 200 ? 'text-[#FEE75C]' : 'text-[#ED4245]' %>">
                                <%= stats.ping %>ms
                            </span>
                        </div>
                        <div class="w-full bg-[#1a1d23] rounded-full h-2">
                            <div class="<%= stats.ping < 100 ? 'bg-[#57F287]' : stats.ping < 200 ? 'bg-[#FEE75C]' : 'bg-[#ED4245]' %> h-2 rounded-full" 
                                 style="width: <%= Math.min(100, (200 - stats.ping) / 2) %>%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex items-center justify-between mb-2">
                            <span class="text-sm text-[#b9bbbe]">Memory Usage</span>
                            <span class="text-sm font-semibold"><%= (process.memoryUsage().heapUsed / 1024 / 1024).toFixed(2) %> MB</span>
                        </div>
                        <div class="w-full bg-[#1a1d23] rounded-full h-2">
                            <div class="bg-[#5865F2] h-2 rounded-full" 
                                 style="width: <%= (process.memoryUsage().heapUsed / process.memoryUsage().heapTotal * 100).toFixed(0) %>%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                <h2 class="text-xl font-bold mb-6">Database Statistics</h2>
                <div class="space-y-4">
                    <div class="flex items-center justify-between p-3 bg-[#1a1d23] rounded-lg">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-[#5865F2]/20 rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 text-[#5865F2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm font-semibold">Guilds in DB</p>
                                <p class="text-xs text-[#b9bbbe]">Stored guild data</p>
                            </div>
                        </div>
                        <span class="text-2xl font-bold"><%= dbStats.guilds %></span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-[#1a1d23] rounded-lg">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-purple-500/20 rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm font-semibold">Users in DB</p>
                                <p class="text-xs text-[#b9bbbe]">Registered users</p>
                            </div>
                        </div>
                        <span class="text-2xl font-bold"><%= dbStats.users %></span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-[#1a1d23] rounded-lg">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-[#57F287]/20 rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 text-[#57F287]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm font-semibold">Prayer Configs</p>
                                <p class="text-xs text-[#b9bbbe]">Active prayer setups</p>
                            </div>
                        </div>
                        <span class="text-2xl font-bold"><%= dbStats.prayerConfigs %></span>
                    </div>
                    <div class="flex items-center justify-between p-3 bg-[#1a1d23] rounded-lg">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-[#FEE75C]/20 rounded-lg flex items-center justify-center">
                                <svg class="w-5 h-5 text-[#FEE75C]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm font-semibold">Monitoring Configs</p>
                                <p class="text-xs text-[#b9bbbe]">Server monitoring</p>
                            </div>
                        </div>
                        <span class="text-2xl font-bold"><%= dbStats.monitoringConfigs %></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Placeholder -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                <h2 class="text-xl font-bold mb-6">Server Growth (Last 7 Days)</h2>
                <canvas id="serverGrowthChart" height="200"></canvas>
            </div>
            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                <h2 class="text-xl font-bold mb-6">Command Usage Distribution</h2>
                <canvas id="commandUsageChart" height="200"></canvas>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
        // Server Growth Chart
        const serverGrowthCtx = document.getElementById('serverGrowthChart').getContext('2d');
        new Chart(serverGrowthCtx, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Servers',
                    data: [<%= stats.guilds - 6 %>, <%= stats.guilds - 5 %>, <%= stats.guilds - 4 %>, <%= stats.guilds - 3 %>, <%= stats.guilds - 2 %>, <%= stats.guilds - 1 %>, <%= stats.guilds %>],
                    borderColor: '#5865F2',
                    backgroundColor: 'rgba(88, 101, 242, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            color: '#b9bbbe'
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: '#b9bbbe'
                        },
                        grid: {
                            color: '#3a3f4b'
                        }
                    },
                    x: {
                        ticks: {
                            color: '#b9bbbe'
                        },
                        grid: {
                            color: '#3a3f4b'
                        }
                    }
                }
            }
        });

        // Command Usage Chart
        const commandUsageCtx = document.getElementById('commandUsageChart').getContext('2d');
        new Chart(commandUsageCtx, {
            type: 'doughnut',
            data: {
                labels: ['Info', 'Music', 'Moderation', 'Minecraft', 'Dev'],
                datasets: [{
                    data: [6, 3, 3, 1, 4],
                    backgroundColor: [
                        '#5865F2',
                        '#57F287',
                        '#ED4245',
                        '#FEE75C',
                        '#9B59B6'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#b9bbbe',
                            padding: 15
                        }
                    }
                }
            }
        });

        function formatUptime(ms) {
            const seconds = Math.floor(ms / 1000);
            const minutes = Math.floor(seconds / 60);
            const hours = Math.floor(minutes / 60);
            const days = Math.floor(hours / 24);
            
            if (days > 0) return `${days}d ${hours % 24}h`;
            if (hours > 0) return `${hours}h ${minutes % 60}m`;
            if (minutes > 0) return `${minutes}m ${seconds % 60}s`;
            return `${seconds}s`;
        }
    </script>
</body>
</html>

<%
function formatUptime(ms) {
    const seconds = Math.floor(ms / 1000);
    const minutes = Math.floor(seconds / 60);
    const hours = Math.floor(minutes / 60);
    const days = Math.floor(hours / 24);
    
    if (days > 0) return `${days}d ${hours % 24}h`;
    if (hours > 0) return `${hours}h ${minutes % 60}m`;
    if (minutes > 0) return `${minutes}m ${seconds % 60}s`;
    return `${seconds}s`;
}
%>

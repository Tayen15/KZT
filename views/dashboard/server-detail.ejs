<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>
          <%= title %>
     </title>
     <link rel="stylesheet" href="/css/main.css">
     <style>
          * {
               margin: 0;
               padding: 0;
               box-sizing: border-box;
          }

          body {
               font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
               background: linear-gradient(135deg, #1a1d23 0%, #0f1115 100%);
               color: #fff;
               min-height: 100vh;
               padding: 2rem;
          }

          .container {
               max-width: 1400px;
               margin: 0 auto;
          }

          .header {
               display: flex;
               justify-content: space-between;
               align-items: center;
               margin-bottom: 2rem;
               padding-bottom: 1rem;
               border-bottom: 2px solid #2b2f38;
          }

          .back-btn {
               padding: 0.75rem 1.5rem;
               background: #23272f;
               color: #fff;
               text-decoration: none;
               border-radius: 8px;
               transition: all 0.3s;
               border: 1px solid #2b2f38;
          }

          .back-btn:hover {
               background: #2b2f38;
               border-color: #5865F2;
          }

          .server-header {
               background: #23272f;
               padding: 2rem;
               border-radius: 12px;
               border: 2px solid #2b2f38;
               margin-bottom: 2rem;
               display: flex;
               gap: 2rem;
               align-items: center;
          }

          .server-icon {
               width: 128px;
               height: 128px;
               border-radius: 50%;
               background: #5865F2;
               display: flex;
               align-items: center;
               justify-content: center;
               font-size: 3rem;
               font-weight: 700;
               flex-shrink: 0;
          }

          .server-icon img {
               width: 100%;
               height: 100%;
               border-radius: 50%;
               object-fit: cover;
          }

          .server-info {
               flex: 1;
          }

          .server-info h1 {
               font-size: 2rem;
               margin-bottom: 0.5rem;
          }

          .server-info p {
               color: #8b8f98;
               margin-bottom: 0.25rem;
          }

          .server-stats-grid {
               display: grid;
               grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
               gap: 1rem;
               margin-bottom: 2rem;
          }

          .stat-card {
               background: #23272f;
               padding: 1.5rem;
               border-radius: 12px;
               border: 2px solid #2b2f38;
          }

          .stat-card h3 {
               color: #8b8f98;
               font-size: 0.875rem;
               font-weight: 600;
               text-transform: uppercase;
               margin-bottom: 0.5rem;
          }

          .stat-card p {
               font-size: 1.5rem;
               font-weight: 700;
               color: #5865F2;
          }

          .tabs {
               display: flex;
               gap: 1rem;
               margin-bottom: 2rem;
               border-bottom: 2px solid #2b2f38;
          }

          .tab {
               padding: 1rem 1.5rem;
               background: transparent;
               border: none;
               color: #8b8f98;
               cursor: pointer;
               font-size: 1rem;
               font-weight: 600;
               border-bottom: 3px solid transparent;
               transition: all 0.3s;
          }

          .tab.active {
               color: #5865F2;
               border-bottom-color: #5865F2;
          }

          .tab-content {
               display: none;
          }

          .tab-content.active {
               display: block;
          }

          .search-box {
               margin-bottom: 1.5rem;
               display: flex;
               gap: 1rem;
          }

          .search-box input {
               flex: 1;
               padding: 0.875rem;
               background: #23272f;
               border: 2px solid #2b2f38;
               border-radius: 8px;
               color: #fff;
               font-size: 1rem;
          }

          .search-box input:focus {
               outline: none;
               border-color: #5865F2;
          }

          .members-list {
               display: grid;
               gap: 1rem;
          }

          .member-card {
               background: #23272f;
               border: 2px solid #2b2f38;
               border-radius: 12px;
               padding: 1.5rem;
               display: flex;
               align-items: center;
               gap: 1rem;
               transition: all 0.3s;
          }

          .member-card:hover {
               border-color: #5865F2;
          }

          .member-avatar {
               width: 64px;
               height: 64px;
               border-radius: 50%;
               flex-shrink: 0;
          }

          .member-info {
               flex: 1;
          }

          .member-name {
               display: flex;
               align-items: center;
               gap: 0.5rem;
               margin-bottom: 0.5rem;
          }

          .member-name h3 {
               font-size: 1.125rem;
          }

          .badge {
               padding: 0.25rem 0.5rem;
               border-radius: 4px;
               font-size: 0.75rem;
               font-weight: 600;
          }

          .badge-owner {
               background: #faa61a;
               color: #000;
          }

          .badge-admin {
               background: #f04747;
               color: #fff;
          }

          .badge-bot {
               background: #5865F2;
               color: #fff;
          }

          .member-roles {
               display: flex;
               flex-wrap: wrap;
               gap: 0.5rem;
               margin-top: 0.5rem;
          }

          .role-badge {
               padding: 0.25rem 0.75rem;
               border-radius: 12px;
               font-size: 0.75rem;
               font-weight: 600;
               border: 1px solid;
          }

          .member-meta {
               color: #8b8f98;
               font-size: 0.875rem;
          }

          .pagination {
               display: flex;
               justify-content: center;
               gap: 0.5rem;
               margin-top: 2rem;
          }

          .pagination button {
               padding: 0.5rem 1rem;
               background: #23272f;
               border: 2px solid #2b2f38;
               border-radius: 8px;
               color: #fff;
               cursor: pointer;
               transition: all 0.3s;
          }

          .pagination button:hover:not(:disabled) {
               border-color: #5865F2;
          }

          .pagination button:disabled {
               opacity: 0.5;
               cursor: not-allowed;
          }

          .pagination button.active {
               background: #5865F2;
               border-color: #5865F2;
          }

          .loading {
               text-align: center;
               padding: 2rem;
               color: #8b8f98;
          }

          .spinner {
               border: 3px solid #2b2f38;
               border-top: 3px solid #5865F2;
               border-radius: 50%;
               width: 40px;
               height: 40px;
               animation: spin 1s linear infinite;
               margin: 0 auto 1rem;
          }

          @keyframes spin {
               0% {
                    transform: rotate(0deg);
               }

               100% {
                    transform: rotate(360deg);
               }
          }
     </style>
</head>

<body>
     <div class="container">
          <div class="header">
               <h1 id="serverName">Server Details</h1>
               <a href="/dashboard/owner/servers" class="back-btn">← Back to Servers</a>
          </div>

          <div id="serverHeader" class="server-header" style="display: none;">
               <!-- Will be populated by JavaScript -->
          </div>

          <div id="serverStats" class="server-stats-grid" style="display: none;">
               <!-- Will be populated by JavaScript -->
          </div>

          <div class="tabs">
               <button class="tab active" data-tab="members">Members</button>
               <button class="tab" data-tab="info">Server Info</button>
          </div>

          <div id="membersTab" class="tab-content active">
               <div class="search-box">
                    <input type="text" id="searchMembers" placeholder="Search members...">
               </div>

               <div id="membersLoading" class="loading">
                    <div class="spinner"></div>
                    <p>Loading members...</p>
               </div>

               <div id="membersList" class="members-list" style="display: none;"></div>

               <div id="pagination" class="pagination" style="display: none;"></div>
          </div>

          <div id="infoTab" class="tab-content">
               <div id="serverInfoContent"></div>
          </div>
     </div>

     <script>
          const guildId = '<%= guildId %>';
          let currentPage = 1;
          let searchQuery = '';

          // Tab switching
          document.querySelectorAll('.tab').forEach(tab => {
               tab.addEventListener('click', () => {
                    document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                    document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));

                    tab.classList.add('active');
                    const tabName = tab.dataset.tab;
                    document.getElementById(tabName + 'Tab').classList.add('active');
               });
          });

          // Load server info
          async function loadServerInfo() {
               try {
                    const response = await fetch(`/api/owner/servers/${guildId}`);
                    const data = await response.json();

                    if (data.success) {
                         renderServerHeader(data.server);
                         renderServerStats(data.server);
                         renderServerInfo(data.server);
                    }
               } catch (error) {
                    console.error('Error loading server info:', error);
               }
          }

          function renderServerHeader(server) {
               const header = document.getElementById('serverHeader');
               const iconUrl = server.icon || null;
               const iconHtml = iconUrl
                    ? `<img src="${iconUrl}" alt="${server.name}">`
                    : server.name.charAt(0).toUpperCase();

               header.innerHTML = `
                <div class="server-icon">${iconHtml}</div>
                <div class="server-info">
                    <h1>${escapeHtml(server.name)}</h1>
                    <p><strong>Owner:</strong> ${escapeHtml(server.owner.tag)}</p>
                    <p><strong>Created:</strong> ${new Date(server.createdAt).toLocaleDateString()}</p>
                    <p><strong>Joined:</strong> ${new Date(server.joinedAt).toLocaleDateString()}</p>
                    ${server.description ? `<p><strong>Description:</strong> ${escapeHtml(server.description)}</p>` : ''}
                </div>
            `;
               header.style.display = 'flex';
               document.getElementById('serverName').textContent = server.name;
          }

          function renderServerStats(server) {
               const stats = document.getElementById('serverStats');
               stats.innerHTML = `
                <div class="stat-card">
                    <h3>Members</h3>
                    <p>${server.memberCount.toLocaleString()}</p>
                </div>
                <div class="stat-card">
                    <h3>Channels</h3>
                    <p>${server.channels.total}</p>
                </div>
                <div class="stat-card">
                    <h3>Roles</h3>
                    <p>${server.roles}</p>
                </div>
                <div class="stat-card">
                    <h3>Boost Tier</h3>
                    <p>${server.boostTier > 0 ? `Tier ${server.boostTier}` : 'None'}</p>
                </div>
            `;
               stats.style.display = 'grid';
          }

          function renderServerInfo(server) {
               const info = document.getElementById('serverInfoContent');
               info.innerHTML = `
                <div style="background: #23272f; padding: 2rem; border-radius: 12px; border: 2px solid #2b2f38;">
                    <h2 style="margin-bottom: 1.5rem; color: #5865F2;">Channel Statistics</h2>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 2rem;">
                        <div>
                            <p style="color: #8b8f98; margin-bottom: 0.5rem;">Text Channels</p>
                            <p style="font-size: 1.5rem; font-weight: 700;">${server.channels.text}</p>
                        </div>
                        <div>
                            <p style="color: #8b8f98; margin-bottom: 0.5rem;">Voice Channels</p>
                            <p style="font-size: 1.5rem; font-weight: 700;">${server.channels.voice}</p>
                        </div>
                        <div>
                            <p style="color: #8b8f98; margin-bottom: 0.5rem;">Categories</p>
                            <p style="font-size: 1.5rem; font-weight: 700;">${server.channels.category}</p>
                        </div>
                    </div>

                    <h2 style="margin-bottom: 1.5rem; color: #5865F2;">Server Features</h2>
                    <div style="display: flex; flex-wrap: wrap; gap: 0.5rem; margin-bottom: 2rem;">
                        ${server.features.length > 0
                         ? server.features.map(f => `<span style="padding: 0.5rem 1rem; background: #2b2f38; border-radius: 8px; font-size: 0.875rem;">${f}</span>`).join('')
                         : '<p style="color: #8b8f98;">No special features</p>'
                    }
                    </div>

                    <h2 style="margin-bottom: 1.5rem; color: #5865F2;">Nitro Boosting</h2>
                    <p style="color: #8b8f98;">
                        <strong>Boost Count:</strong> ${server.boostCount || 0} boosts<br>
                        <strong>Boost Tier:</strong> ${server.boostTier > 0 ? `Tier ${server.boostTier}` : 'None'}
                    </p>
                </div>
            `;
          }

          // Load members
          async function loadMembers(page = 1, search = '') {
               try {
                    document.getElementById('membersLoading').style.display = 'block';
                    document.getElementById('membersList').style.display = 'none';
                    document.getElementById('pagination').style.display = 'none';

                    const params = new URLSearchParams({ page, limit: 20 });
                    if (search) params.append('search', search);

                    const response = await fetch(`/api/owner/servers/${guildId}/members?${params}`);
                    const data = await response.json();

                    if (data.success) {
                         renderMembers(data.members);
                         renderPagination(data.pagination);
                    }
               } catch (error) {
                    console.error('Error loading members:', error);
               } finally {
                    document.getElementById('membersLoading').style.display = 'none';
               }
          }

          function renderMembers(members) {
               const list = document.getElementById('membersList');

               if (members.length === 0) {
                    list.innerHTML = '<p style="text-align: center; color: #8b8f98; padding: 2rem;">No members found</p>';
                    list.style.display = 'block';
                    return;
               }

               list.innerHTML = members.map(member => {
                    const badges = [];
                    if (member.isOwner) badges.push('<span class="badge badge-owner">OWNER</span>');
                    if (member.permissions.isAdmin) badges.push('<span class="badge badge-admin">ADMIN</span>');
                    if (member.isBot) badges.push('<span class="badge badge-bot">BOT</span>');

                    const roles = member.roles.length > 0
                         ? member.roles.slice(0, 5).map(role =>
                              `<span class="role-badge" style="background-color: ${role.color}15; border-color: ${role.color};">${escapeHtml(role.name)}</span>`
                         ).join('')
                         : '<span style="color: #8b8f98; font-size: 0.875rem;">No roles</span>';

                    return `
                    <div class="member-card">
                        <img src="${member.avatar}" alt="${member.username}" class="member-avatar">
                        <div class="member-info">
                            <div class="member-name">
                                <h3>${escapeHtml(member.displayName)}</h3>
                                ${badges.join('')}
                            </div>
                            <p class="member-meta">${escapeHtml(member.tag)} • Joined ${new Date(member.joinedAt).toLocaleDateString()}</p>
                            <div class="member-roles">${roles}</div>
                        </div>
                    </div>
                `;
               }).join('');

               list.style.display = 'grid';
          }

          function renderPagination(pagination) {
               const container = document.getElementById('pagination');

               if (pagination.totalPages <= 1) {
                    container.style.display = 'none';
                    return;
               }

               let html = '';

               // Previous button
               html += `<button ${pagination.page === 1 ? 'disabled' : ''} onclick="changePage(${pagination.page - 1})">← Previous</button>`;

               // Page numbers
               for (let i = 1; i <= Math.min(5, pagination.totalPages); i++) {
                    const pageNum = i;
                    html += `<button class="${pageNum === pagination.page ? 'active' : ''}" onclick="changePage(${pageNum})">${pageNum}</button>`;
               }

               if (pagination.totalPages > 5) {
                    html += `<button disabled>...</button>`;
                    html += `<button onclick="changePage(${pagination.totalPages})">${pagination.totalPages}</button>`;
               }

               // Next button
               html += `<button ${pagination.page === pagination.totalPages ? 'disabled' : ''} onclick="changePage(${pagination.page + 1})">Next →</button>`;

               container.innerHTML = html;
               container.style.display = 'flex';
          }

          function changePage(page) {
               currentPage = page;
               loadMembers(page, searchQuery);
          }

          // Search members
          let searchTimeout;
          document.getElementById('searchMembers').addEventListener('input', (e) => {
               clearTimeout(searchTimeout);
               searchQuery = e.target.value;
               searchTimeout = setTimeout(() => {
                    currentPage = 1;
                    loadMembers(1, searchQuery);
               }, 500);
          });

          function escapeHtml(text) {
               const map = {
                    '&': '&amp;',
                    '<': '&lt;',
                    '>': '&gt;',
                    '"': '&quot;',
                    "'": '&#039;'
               };
               return text.replace(/[&<>"']/g, m => map[m]);
          }

          // Load data on page load
          loadServerInfo();
          loadMembers();
     </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guild.name %> - Rules Management</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-[#1a1d23] text-white">
    <div class="flex h-screen overflow-hidden">
        <!-- Dashboard Sidebar -->
        <% const currentPage='rules' ; %>
        <%- include('../partials/dashboard-sidebar', { guild, currentPage, user, guilds }) %>

        <!-- Main Content -->
        <main class="flex-1 overflow-y-auto ml-0 lg:ml-64 transition-all duration-300">
            <!-- Sticky Top Bar -->
            <div class="sticky top-0 z-10 bg-[#23272f]/95 backdrop-blur-sm border-b border-[#3a3f4b] px-8 py-4">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-2xl font-bold text-white">Server Rules</h1>
                        <p class="text-[#b9bbbe] text-sm mt-1">Manage your server rules and regulations</p>
                    </div>
                    <a href="/dashboard" 
                       class="text-[#b9bbbe] hover:text-[#5865F2] transition-colors duration-200 flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-[#2b2f38]">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                        <span class="font-medium">Back to Servers</span>
                    </a>
                </div>
            </div>

            <!-- Content Area -->
            <div class="p-8">
                <div class="max-w-7xl mx-auto">
                <!-- Add New Rule Button -->
                <div class="mb-6 flex justify-end">
                    <button onclick="openAddRuleModal()" 
                            class="flex items-center space-x-2 px-4 py-2 bg-[#5865F2] hover:bg-[#4752c4] text-white font-semibold rounded-lg transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        <span>Add New Rule</span>
                    </button>
                </div>

                <!-- Rules List -->
                <div class="space-y-4">
                    <% if (rules && rules.length > 0) { %>
                        <% rules.forEach((rule, index) => { %>
                            <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-6">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <div class="flex items-center space-x-3 mb-2">
                                            <span class="bg-[#5865F2] text-white w-8 h-8 rounded-full flex items-center justify-center font-bold">
                                                <%= index + 1 %>
                                            </span>
                                            <h3 class="text-xl font-bold"><%= rule.title %></h3>
                                        </div>
                                        <p class="text-[#b9bbbe] ml-11"><%= rule.description %></p>
                                    </div>
                                    <div class="flex items-center space-x-2 ml-4">
                                        <button onclick="editRule('<%= rule.id %>')" 
                                                class="p-2 hover:bg-[#3a3f4b] rounded transition-colors"
                                                title="Edit">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                            </svg>
                                        </button>
                                        <button onclick="deleteRule('<%= rule.id %>')" 
                                                class="p-2 hover:bg-red-500/20 text-red-500 rounded transition-colors"
                                                title="Delete">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <!-- No Rules -->
                        <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg p-12 text-center">
                            <svg class="w-16 h-16 mx-auto mb-4 text-[#b9bbbe]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            <h3 class="text-xl font-bold mb-2">No Rules Yet</h3>
                            <p class="text-[#b9bbbe] mb-4">
                                Belum ada rules yang dibuat untuk server ini.
                            </p>
                            <button onclick="openAddRuleModal()" 
                                    class="inline-block bg-[#5865F2] hover:bg-[#4752c4] text-white font-semibold px-6 py-3 rounded-lg transition-colors">
                                Create Your First Rule
                            </button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    </div>

    <!-- Add/Edit Rule Modal -->
    <div id="ruleModal" class="fixed inset-0 bg-black/50 items-center justify-center z-50 p-4" style="display: none;">
        <div class="bg-[#2b2f38] border border-[#3a3f4b] rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <div class="sticky top-0 bg-[#2b2f38] border-b border-[#3a3f4b] p-6">
                <div class="flex items-center justify-between">
                    <h2 id="modalTitle" class="text-2xl font-bold">Add New Rule</h2>
                    <button onclick="closeRuleModal()" class="text-[#b9bbbe] hover:text-white transition-colors">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                    </button>
                </div>
            </div>
            
            <form id="ruleForm" class="p-6 space-y-4">
                <input type="hidden" id="ruleId" name="ruleId">
                
                <div>
                    <label for="ruleTitle" class="block text-sm font-medium mb-2">Rule Title</label>
                    <input type="text" 
                           id="ruleTitle" 
                           name="title" 
                           required
                           class="w-full bg-[#23272f] border border-[#3a3f4b] rounded-lg px-4 py-2 focus:outline-none focus:border-[#5865F2] transition-colors"
                           placeholder="No Spam">
                </div>

                <div>
                    <label for="ruleDescription" class="block text-sm font-medium mb-2">Description</label>
                    <textarea id="ruleDescription" 
                              name="description" 
                              rows="4"
                              required
                              class="w-full bg-[#23272f] border border-[#3a3f4b] rounded-lg px-4 py-2 focus:outline-none focus:border-[#5865F2] transition-colors"
                              placeholder="Do not spam messages in any channel"></textarea>
                </div>

                <div class="flex justify-end space-x-3 pt-4">
                    <button type="button" 
                            onclick="closeRuleModal()"
                            class="px-6 py-2 bg-[#23272f] border border-[#3a3f4b] hover:bg-[#3a3f4b] rounded-lg transition-colors">
                        Cancel
                    </button>
                    <button type="submit" 
                            class="px-6 py-2 bg-[#5865F2] hover:bg-[#4752c4] text-white font-semibold rounded-lg transition-colors">
                        Save Rule
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        const guildId = '<%= guild.guildId %>';

        function openAddRuleModal() {
            document.getElementById('modalTitle').textContent = 'Add New Rule';
            document.getElementById('ruleForm').reset();
            document.getElementById('ruleId').value = '';
            document.getElementById('ruleModal').style.display = 'flex';
        }

        function closeRuleModal() {
            document.getElementById('ruleModal').style.display = 'none';
        }

        function editRule(ruleId) {
            // Fetch rule data and populate form
            fetch(`/api/guild/${guildId}/rules/${ruleId}`)
                .then(res => res.json())
                .then(rule => {
                    document.getElementById('modalTitle').textContent = 'Edit Rule';
                    document.getElementById('ruleId').value = rule.id;
                    document.getElementById('ruleTitle').value = rule.title;
                    document.getElementById('ruleDescription').value = rule.description;
                    document.getElementById('ruleModal').style.display = 'flex';
                })
                .catch(err => alert('Failed to load rule'));
        }

        function deleteRule(ruleId) {
            if (!confirm('Are you sure you want to delete this rule?')) return;

            fetch(`/api/guild/${guildId}/rules/${ruleId}`, {
                method: 'DELETE'
            })
            .then(res => res.json())
            .then(result => {
                if (result.success) {
                    window.location.reload();
                } else {
                    alert('Failed to delete rule');
                }
            })
            .catch(err => alert('Failed to delete rule'));
        }

        document.getElementById('ruleForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            const ruleId = document.getElementById('ruleId').value;
            
            const data = {
                title: formData.get('title'),
                description: formData.get('description')
            };

            const url = ruleId 
                ? `/api/guild/${guildId}/rules/${ruleId}`
                : `/api/guild/${guildId}/rules`;
            
            const method = ruleId ? 'PUT' : 'POST';

            try {
                const response = await fetch(url, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    window.location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Failed to save rule');
                console.error(error);
            }
        });

        // Close modal on outside click
        document.getElementById('ruleModal').addEventListener('click', (e) => {
            if (e.target.id === 'ruleModal') {
                closeRuleModal();
            }
        });
    </script>
</body>
</html>

        // Canvas preview for custom image
        function updateCanvasPreview() {
            const canvas = document.getElementById('imagePreviewCanvas');
            if (!canvas) return;

            const ctx = canvas.getContext('2d');
            const width = canvas.width;
            const height = canvas.height;

            // Get current settings
            const bgColor = document.getElementById('bgColorInput')?.value || '#23272A';
            const bgImageUrl = document.getElementById('bgImageUrlHidden')?.value || '';
            const circleColor = document.getElementById('circleColorPicker')?.value || '#FFFFFF';
            const titleColor = document.getElementById('titleColorPicker')?.value || '#FFFFFF';
            const usernameColor = document.getElementById('usernameColorPicker')?.value || '#FFFFFF';
            const messageColor = document.getElementById('messageColorPicker')?.value || '#B9BBBE';
            const overlayColor = document.getElementById('overlayColorPicker')?.value || '#000000';
            const overlayOpacity = (document.getElementById('overlayOpacityInput')?.value || 50) / 100;

            // Get layout, avatar shape, and font
            const layout = document.getElementById('layoutSelect')?.value || 'simple';
            const avatarShape = document.getElementById('avatarShapeSelect')?.value || 'circle';
            const font = document.getElementById('fontSelect')?.value || 'gg sans';

            // Clear canvas
            ctx.clearRect(0, 0, width, height);

            // Draw background
            if (bgImageUrl) {
                const bgImg = new Image();
                bgImg.crossOrigin = 'anonymous';
                bgImg.onload = () => {
                    ctx.drawImage(bgImg, 0, 0, width, height);
                    drawOverlayAndContent();
                };
                bgImg.onerror = () => {
                    // Fallback to color if image fails
                    ctx.fillStyle = bgColor;
                    ctx.fillRect(0, 0, width, height);
                    drawOverlayAndContent();
                };
                bgImg.src = bgImageUrl;
            } else {
                ctx.fillStyle = bgColor;
                ctx.fillRect(0, 0, width, height);
                drawOverlayAndContent();
            }

            function drawOverlayAndContent() {
                // Draw overlay
                ctx.fillStyle = overlayColor + Math.round(overlayOpacity * 255).toString(16).padStart(2, '0');
                ctx.fillRect(0, 0, width, height);

                // Avatar positioning based on layout
                let avatarX = width / 2;
                let avatarY = 80;
                let textStartX = width / 2;
                let textAlign = 'center';
                let titleY = 180;
                let usernameY = 215;
                let messageY = 240;

                if (layout === 'simple') {
                    // Simple/Center: Avatar center top, text below centered
                    avatarX = width / 2;
                    avatarY = 130;
                    textStartX = width / 2;
                    textAlign = 'center';
                    titleY = 300;
                    usernameY = 355;
                    messageY = 405;
                } else if (layout === 'left') {
                    // Left: Avatar left, text to the right
                    avatarX = 100;
                    avatarY = height / 2;
                    textStartX = 200;
                    textAlign = 'left';
                    titleY = height / 2 - 30;
                    usernameY = height / 2 + 10;
                    messageY = height / 2 + 45;
                } else if (layout === 'right') {
                    // Right: Avatar right, text to the left
                    avatarX = width - 100;
                    avatarY = height / 2;
                    textStartX = width - 200;
                    textAlign = 'right';
                    titleY = height / 2 - 30;
                    usernameY = height / 2 + 10;
                    messageY = height / 2 + 45;
                } else if (layout === 'text') {
                    // Text only: no avatar, text centered
                    textStartX = width / 2;
                    textAlign = 'center';
                    titleY = height / 2 - 30;
                    usernameY = height / 2 + 10;
                    messageY = height / 2 + 45;
                }

                const avatarRadius = (layout === 'simple') ? 90 : 100;

                // Draw avatar based on shape (skip if text layout)
                if (layout !== 'text') {
                    ctx.save();

                    // Create clipping path for avatar shape
                    ctx.beginPath();
                    if (avatarShape === 'circle') {
                        ctx.arc(avatarX, avatarY, avatarRadius, 0, Math.PI * 2);
                    } else if (avatarShape === 'square') {
                        ctx.rect(avatarX - avatarRadius, avatarY - avatarRadius, avatarRadius * 2, avatarRadius * 2);
                    }
                    ctx.closePath();
                    ctx.clip();

                    // Draw avatar background
                    ctx.fillStyle = '#36393f';
                    ctx.fill();

                    // Load and draw user avatar
                    const avatarImg = new Image();
                    avatarImg.crossOrigin = 'anonymous';
                    avatarImg.onload = () => {
                        ctx.drawImage(avatarImg, avatarX - avatarRadius, avatarY - avatarRadius, avatarRadius * 2, avatarRadius * 2);
                        ctx.restore();

                        // Draw border after avatar
                        ctx.beginPath();
                        if (avatarShape === 'circle') {
                            ctx.arc(avatarX, avatarY, avatarRadius, 0, Math.PI * 2);
                        } else if (avatarShape === 'square') {
                            ctx.rect(avatarX - avatarRadius, avatarY - avatarRadius, avatarRadius * 2, avatarRadius * 2);
                        }
                        ctx.strokeStyle = circleColor;
                        ctx.lineWidth = 5;
                        ctx.stroke();

                        // Draw text AFTER avatar is loaded
                        drawText();
                    };
                    avatarImg.onerror = () => {
                        // If avatar fails to load, just draw border
                        ctx.restore();
                        ctx.beginPath();
                        if (avatarShape === 'circle') {
                            ctx.arc(avatarX, avatarY, avatarRadius, 0, Math.PI * 2);
                        } else if (avatarShape === 'square') {
                            ctx.rect(avatarX - avatarRadius, avatarY - avatarRadius, avatarRadius * 2, avatarRadius * 2);
                        }
                        ctx.strokeStyle = circleColor;
                        ctx.lineWidth = 5;
                        ctx.stroke();

                        // Draw text even if avatar fails
                        drawText();
                    };
                    avatarImg.src = userData.avatar;
                } else {
                    // No avatar, just draw text
                    drawText();
                }

                // Function to draw text (called after avatar or immediately for text-only layout)
                function drawText() {
                    // Apply font (map to actual font families)
                    let fontFamily = 'Arial, sans-serif';
                    if (font === 'gg sans') {
                        fontFamily = "'gg sans', 'Noto Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif";
                    } else if (font === 'Arial') {
                        fontFamily = 'Arial, sans-serif';
                    } else if (font === 'Helvetica') {
                        fontFamily = 'Helvetica, sans-serif';
                    } else if (font === 'Impact') {
                        fontFamily = 'Impact, sans-serif';
                    } else if (font === 'Georgia') {
                        fontFamily = 'Georgia, serif';
                    } else if (font === 'Courier New') {
                        fontFamily = "'Courier New', monospace";
                    } else if (font === 'Comic Sans MS') {
                        fontFamily = "'Comic Sans MS', cursive";
                    } else if (font === 'Verdana') {
                        fontFamily = 'Verdana, sans-serif';
                    } else if (font === 'Times New Roman') {
                        fontFamily = "'Times New Roman', serif";
                    }

                    // Set text alignment
                    ctx.textAlign = textAlign;

                    // Draw title
                    const titleSize = (layout === 'simple') ? 48 : 50;
                    ctx.font = `bold ${titleSize}px ${fontFamily}`;
                    ctx.fillStyle = titleColor;
                    ctx.fillText('WELCOME', textStartX, titleY);

                    // Draw username
                    const usernameSize = (layout === 'simple') ? 40 : 42;
                    ctx.font = `bold ${usernameSize}px ${fontFamily}`;
                    ctx.fillStyle = usernameColor;
                    const displayUsername = userData.discriminator !== '0' ? `${userData.username}#${userData.discriminator}` : userData.username;
                    ctx.fillText(displayUsername, textStartX, usernameY);

                    // Draw message
                    const messageSize = (layout === 'simple') ? 28 : 30;
                    ctx.font = `${messageSize}px ${fontFamily}`;
                    ctx.fillStyle = messageColor;
                    ctx.fillText(`You are the ${guildData.memberCount.toLocaleString()}th member!`, textStartX, messageY);
                }
            }
        }

        // Setup canvas update listeners
        function setupCanvasUpdates() {
            const colorInputs = ['circleColorPicker', 'titleColorPicker', 'usernameColorPicker', 'messageColorPicker', 'overlayColorPicker', 'overlayOpacityInput'];
            colorInputs.forEach(id => {
                const el = document.getElementById(id);
                if (el) el.addEventListener('input', updateCanvasPreview);
            });

            // Update on layout, avatar shape, or font change
            const layoutSelect = document.getElementById('layoutSelect');
            const avatarShapeSelect = document.getElementById('avatarShapeSelect');
            const fontSelect = document.getElementById('fontSelect');

            if (layoutSelect) layoutSelect.addEventListener('change', updateCanvasPreview);
            if (avatarShapeSelect) avatarShapeSelect.addEventListener('change', updateCanvasPreview);
            if (fontSelect) fontSelect.addEventListener('change', updateCanvasPreview);

            // Update on background change
            const bgColorInput = document.getElementById('bgColorInput');
            const bgImageUrlHidden = document.getElementById('bgImageUrlHidden');
            const customUrlInput = document.getElementById('customBgUrlInput');

            if (bgColorInput) bgColorInput.addEventListener('change', updateCanvasPreview);
            if (bgImageUrlHidden) {
                // Watch for changes via MutationObserver
                const observer = new MutationObserver(updateCanvasPreview);
                observer.observe(bgImageUrlHidden, { attributes: true, attributeFilter: ['value'] });
            }
            if (customUrlInput) {
                let timeout;
                customUrlInput.addEventListener('input', () => {
                    clearTimeout(timeout);
                    timeout = setTimeout(updateCanvasPreview, 500);
                });
            }

            // Update on gallery click
            document.querySelectorAll('.bg-gallery-item').forEach(item => {
                item.addEventListener('click', () => {
                    setTimeout(updateCanvasPreview, 100);
                });
            });

            // Update on color preset click
            document.querySelectorAll('.color-preset').forEach(preset => {
                preset.addEventListener('click', () => {
                    setTimeout(updateCanvasPreview, 50);
                });
            });
        }

        // Toggle embed fields visibility
        function setupEmbedToggle() {
            const toggle = document.getElementById('useEmbedToggle');
            const embedFields = document.getElementById('embedFields');
            const embedPreviewContainer = document.getElementById('embedPreviewContainer');

            if (toggle && embedFields) {
                toggle.addEventListener('change', (e) => {
                    if (e.target.checked) {
                        embedFields.classList.remove('hidden');
                        if (embedPreviewContainer) embedPreviewContainer.classList.remove('hidden');
                    } else {
                        embedFields.classList.add('hidden');
                        if (embedPreviewContainer) embedPreviewContainer.classList.add('hidden');
                    }
                });
            }
        }

        // Placeholder flyout logic
        document.addEventListener('DOMContentLoaded', () => {
            loadChannels();
            updatePreview();
            setupColorPresets();
            setupColorPickers();
            setupBackgroundGallery();
            setupCustomImageToggle();
            setupEmbedToggle();
            initBackgroundSelection();
            initColorPresets();
            setupPreviewUpdates();
            updateCanvasPreview();
            setupCanvasUpdates();

            // Overlay range slider logic - Update text value display
            const overlayOpacityInput = document.getElementById('overlayOpacityInput');
            const overlayOpacityValue = document.getElementById('overlayOpacityValue');
            const overlayColorPicker = document.getElementById('overlayColorPicker');
            const overlayColorValue = document.getElementById('overlayColorValue');

            function updateOverlayDisplayValues() {
                if (overlayOpacityValue && overlayOpacityInput) {
                    overlayOpacityValue.textContent = overlayOpacityInput.value + '%';
                }
                if (overlayColorValue && overlayColorPicker) {
                    overlayColorValue.textContent = overlayColorPicker.value;
                }
            }

            if (overlayOpacityInput) {
                overlayOpacityInput.addEventListener('input', updateOverlayDisplayValues);
            }
            if (overlayColorPicker) {
                overlayColorPicker.addEventListener('input', updateOverlayDisplayValues);
            }

            // Initialize display values
            updateOverlayDisplayValues();

            // Flyout menu logic
            const flyoutBtn = document.getElementById('placeholderFlyoutBtn');
            const flyoutMenu = document.getElementById('placeholderFlyout');
            if (flyoutBtn && flyoutMenu) {
                flyoutBtn.addEventListener('click', (e) => {
                    flyoutMenu.classList.toggle('hidden');
                });
                document.addEventListener('click', (e) => {
                    if (!flyoutBtn.contains(e.target) && !flyoutMenu.contains(e.target)) {
                        flyoutMenu.classList.add('hidden');
                    }
                });
            }

            // Save CTA logic
            const form = document.getElementById('welcomeForm');
            const saveCta = document.getElementById('saveCtaAlert');
            const saveBtn = document.getElementById('saveBtn');
            let initialFormState = form ? new FormData(form) : null;

            function formChanged() {
                if (!form || !initialFormState) return false;
                const current = new FormData(form);
                for (let [key, value] of initialFormState.entries()) {
                    if (current.get(key) !== value) return true;
                }
                for (let [key, value] of current.entries()) {
                    if (initialFormState.get(key) !== value) return true;
                }
                return false;
            }

            function showSaveCta(show) {
                if (saveCta) {
                    if (show) {
                        saveCta.classList.remove('opacity-0', 'pointer-events-none');
                        saveCta.classList.add('opacity-100');
                    } else {
                        saveCta.classList.add('opacity-0', 'pointer-events-none');
                        saveCta.classList.remove('opacity-100');
                    }
                }
            }

            if (form) {
                form.addEventListener('input', () => {
                    showSaveCta(formChanged());
                });
                form.addEventListener('change', () => {
                    showSaveCta(formChanged());
                });
            }

            // Save button logic
            if (saveBtn) {
                saveBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    if (!form) return;

                    // Convert FormData to URLSearchParams for proper encoding
                    const formData = new FormData(form);
                    const urlParams = new URLSearchParams();

                    // Add all form fields
                    for (let [key, value] of formData.entries()) {
                        urlParams.append(key, value);
                    }

                    fetch(form.action, {
                        method: 'POST',
                        body: urlParams,
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'Accept': 'application/json'
                        }
                    }).then(res => res.json()).then(data => {
                        if (data.success) {
                            showSaveCta(false);
                            initialFormState = new FormData(form);
                            saveCta.classList.add('bg-[#57F287]');
                            saveCta.classList.remove('bg-[#5865F2]');
                            saveBtn.textContent = '‚úì Saved!';
                            setTimeout(() => {
                                saveCta.classList.remove('bg-[#57F287]');
                                saveCta.classList.add('bg-[#5865F2]');
                                saveBtn.textContent = 'Save Settings';
                            }, 2000);
                        } else {
                            saveCta.classList.add('bg-[#ED4245]');
                            saveCta.classList.remove('bg-[#5865F2]');
                            saveBtn.textContent = '‚úó Error!';
                            setTimeout(() => {
                                saveCta.classList.remove('bg-[#ED4245]');
                                saveCta.classList.add('bg-[#5865F2]');
                                saveBtn.textContent = 'Save Settings';
                            }, 2000);
                        }
                    }).catch(err => {
                        console.error('Save error:', err);
                        saveCta.classList.add('bg-[#ED4245]');
                        saveCta.classList.remove('bg-[#5865F2]');
                        saveBtn.textContent = '‚úó Error!';
                        setTimeout(() => {
                            saveCta.classList.remove('bg-[#ED4245]');
                            saveCta.classList.add('bg-[#5865F2]');
                            saveBtn.textContent = 'Save Settings';
                        }, 2000);
                    });
                });
            }

            // Reset button logic
            const resetBtn = document.getElementById('resetBtn');
            if (resetBtn && form) {
                resetBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    form.reset();
                    updatePreview();
                    updateCanvasPreview();
                    showSaveCta(formChanged());
                });
            }
        });
    </script>

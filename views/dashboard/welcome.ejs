    <script>
        const guildId = '<%= guild.guildId %>';

        // Server-side data
        const channelsData = (<% - JSON.stringify(channels || []) %>);
        const rolesData = (<% - JSON.stringify(roles || []) %>);
        const guildData = {
            name: '<%= guild.name %>',
            memberCount: <%= guild.memberCount || 1234 %>
        };

        // User data from logged-in account
        const userData = {
            username: '<%= user.username %>',
            discriminator: '<%= user.discriminator || "0" %>',
            id: '<%= user.discordId %>',
            avatar: '<%= user.avatar ? `https://cdn.discordapp.com/avatars/${user.discordId}/${user.avatar}.png?size=256` : `https://cdn.discordapp.com/embed/avatars/${parseInt(user.discriminator || "0") % 5}.png` %>'
        };

        // Placeholder values for preview using logged-in user
        const placeholders = {
            '[user]': userData.discriminator !== '0' ? `${userData.username}#${userData.discriminator}` : userData.username,
            '[user.mention]': `@${userData.username}`,
            '[user.username]': userData.username,
            '[user.id]': userData.id,
            '[user.avatar]': userData.avatar,
            '[server.name]': guildData.name,
            '[server.icon]': '',
            '[membercount]': guildData.memberCount.toString(),
            '[membercount.ordinal]': guildData.memberCount.toLocaleString() + 'th'
        };

        // Replace placeholders in text
        const renderTpl = (tpl) => {
            if (!tpl) return '';
            let result = tpl;

            // Replace placeholders
            Object.keys(placeholders).forEach(key => {
                result = result.replaceAll(key, placeholders[key]);
            });

            // Also support legacy {{placeholder}} format
            result = result.replaceAll('{{user}}', placeholders['[user]']);
            result = result.replaceAll('{{mention}}', placeholders['[user.mention]']);
            result = result.replaceAll('{{server}}', placeholders['[server.name]']);
            result = result.replaceAll('{{memberCount}}', placeholders['[membercount]']);

            return result;
        };

        // Parse Discord markdown to HTML
        function parseDiscordMarkdown(text) {
            if (!text) return '';

            let html = text;

            // Code blocks BEFORE escaping (```language\ncode```)
            const codeBlocks = [];
            html = html.replace(/```(\w+)?\n([\s\S]+?)```/g, (match, lang, code) => {
                const index = codeBlocks.length;
                codeBlocks.push(`<pre class="bg-[#2b2f38] p-2 rounded my-1 overflow-x-auto"><code>${code.replace(/</g, '&lt;').replace(/>/g, '&gt;')}</code></pre>`);
                return `___CODEBLOCK${index}___`;
            });

            // Inline code BEFORE escaping (`code`)
            const inlineCodes = [];
            html = html.replace(/`([^`]+)`/g, (match, code) => {
                const index = inlineCodes.length;
                inlineCodes.push(`<code class="bg-[#2b2f38] px-1 py-0.5 rounded text-sm">${code.replace(/</g, '&lt;').replace(/>/g, '&gt;')}</code>`);
                return `___INLINECODE${index}___`;
            });

            // NOW escape remaining HTML
            html = html.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');

            // Bold (**text** or __text__)
            html = html.replace(/\*\*([^\*]+)\*\*/g, '<strong>$1</strong>');
            html = html.replace(/__([^_]+)__/g, '<strong>$1</strong>');

            // Italic (*text* or _text_)
            html = html.replace(/\*([^\*]+)\*/g, '<em>$1</em>');
            html = html.replace(/_([^_]+)_/g, '<em>$1</em>');

            // Strikethrough (~~text~~)
            html = html.replace(/~~([^~]+)~~/g, '<del class="opacity-60">$1</del>');

            // Underline (Markdown doesn't have native underline, but Discord does with __)
            // Already handled above with bold

            // Spoiler (||text||)
            html = html.replace(/\|\|([^|]+)\|\|/g, '<span class="bg-[#202225] text-[#202225] hover:text-white cursor-pointer transition-colors" title="Spoiler - hover to reveal">$1</span>');

            // Quote (> text)
            html = html.replace(/^&gt; (.+)$/gm, '<div class="border-l-4 border-[#4f545c] pl-2 my-1">$1</div>');

            // Links [text](url)
            html = html.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" class="text-[#00b0f4] hover:underline" target="_blank">$1</a>');

            // Channel mentions [#channelId] or <#channelId>
            html = html.replace(/\[#(\d{17,19})\]/g, (match, channelId) => {
                const channel = channelsData.find(ch => ch.id === channelId);
                return channel
                    ? `<span class="text-[#5865F2] bg-[#5865F2]/10 px-1 rounded cursor-pointer">#${channel.name}</span>`
                    : `<span class="text-[#f23f42]">[#unknown-channel]</span>`;
            });
            html = html.replace(/&lt;#(\d{17,19})&gt;/g, (match, channelId) => {
                const channel = channelsData.find(ch => ch.id === channelId);
                return channel
                    ? `<span class="text-[#5865F2] bg-[#5865F2]/10 px-1 rounded cursor-pointer">#${channel.name}</span>`
                    : `<span class="text-[#f23f42]">&lt;#unknown-channel&gt;</span>`;
            });

            // Role mentions [@roleId] or <@&roleId>
            html = html.replace(/\[@(\d{17,19})\]/g, (match, roleId) => {
                const role = rolesData.find(r => r.id === roleId);
                return role
                    ? `<span class="px-1 rounded cursor-pointer" style="background-color: ${role.color}22; color: ${role.color};">@${role.name}</span>`
                    : `<span class="text-[#f23f42]">[@unknown-role]</span>`;
            });
            html = html.replace(/&lt;@&amp;(\d{17,19})&gt;/g, (match, roleId) => {
                const role = rolesData.find(r => r.id === roleId);
                return role
                    ? `<span class="px-1 rounded cursor-pointer" style="background-color: ${role.color}22; color: ${role.color};">@${role.name}</span>`
                    : `<span class="text-[#f23f42]">&lt;@&amp;unknown-role&gt;</span>`;
            });

            // User mentions <@userId> or plain @Username
            html = html.replace(/&lt;@!?(\d{17,19})&gt;/g, '<span class="text-[#5865F2] bg-[#5865F2]/10 px-1 rounded cursor-pointer">@User</span>');

            // Plain @mention styling (for placeholder @username)
            html = html.replace(/@(\w+)/g, '<span class="text-[#5865F2] bg-[#5865F2]/10 px-1 rounded cursor-pointer">@$1</span>');

            // Emoji :emoji_name:
            html = html.replace(/:(\w+):/g, '<span title=":$1:">üòÄ</span>');

            // Custom emoji <:name:id> or <a:name:id>
            html = html.replace(/&lt;a?:(\w+):(\d+)&gt;/g, '<img src="https://cdn.discordapp.com/emojis/$2.png" alt=":$1:" class="inline w-5 h-5" />');

            // Newlines
            html = html.replace(/\n/g, '<br>');

            // Restore code blocks and inline codes
            codeBlocks.forEach((block, index) => {
                html = html.replace(`___CODEBLOCK${index}___`, block);
            });
            inlineCodes.forEach((code, index) => {
                html = html.replace(`___INLINECODE${index}___`, code);
            });

            return html;
        }

        // Populate channels from server-side data
        function loadChannels() {
            const select = document.getElementById('channelSelect');
            if (!select) return;

            select.innerHTML = '<option value="">Select a text channel...</option>';

            if (!channelsData || channelsData.length === 0) {
                select.innerHTML += '<option value="" disabled>No text channels available</option>';
                return;
            }

            channelsData.forEach(ch => {
                const opt = document.createElement('option');
                opt.value = ch.id;
                opt.textContent = `# ${ch.name}`;
                if ('<%= welcome.channelId || "" %>' === ch.id) opt.selected = true;
                select.appendChild(opt);
            });
        }


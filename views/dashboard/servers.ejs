<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>
          <%= title %>
     </title>
     <link rel="stylesheet" href="/css/main.css">
     <style>
          * {
               margin: 0;
               padding: 0;
               box-sizing: border-box;
          }

          body {
               font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
               background: linear-gradient(135deg, #1a1d23 0%, #0f1115 100%);
               color: #fff;
               min-height: 100vh;
               padding: 2rem;
          }

          .container {
               max-width: 1400px;
               margin: 0 auto;
          }

          .header {
               display: flex;
               justify-content: space-between;
               align-items: center;
               margin-bottom: 2rem;
               padding-bottom: 1rem;
               border-bottom: 2px solid #2b2f38;
          }

          .header h1 {
               font-size: 2rem;
               background: linear-gradient(135deg, #5865F2 0%, #7289DA 100%);
               -webkit-background-clip: text;
               -webkit-text-fill-color: transparent;
          }

          .back-btn {
               padding: 0.75rem 1.5rem;
               background: #23272f;
               color: #fff;
               text-decoration: none;
               border-radius: 8px;
               transition: all 0.3s;
               border: 1px solid #2b2f38;
          }

          .back-btn:hover {
               background: #2b2f38;
               border-color: #5865F2;
          }

          .stats {
               display: grid;
               grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
               gap: 1rem;
               margin-bottom: 2rem;
          }

          .stat-card {
               background: #23272f;
               padding: 1.5rem;
               border-radius: 12px;
               border: 2px solid #2b2f38;
          }

          .stat-card h3 {
               color: #8b8f98;
               font-size: 0.875rem;
               font-weight: 600;
               text-transform: uppercase;
               margin-bottom: 0.5rem;
          }

          .stat-card p {
               font-size: 2rem;
               font-weight: 700;
               color: #5865F2;
          }

          .search-box {
               margin-bottom: 2rem;
          }

          .search-box input {
               width: 100%;
               padding: 1rem;
               background: #23272f;
               border: 2px solid #2b2f38;
               border-radius: 12px;
               color: #fff;
               font-size: 1rem;
               transition: border-color 0.3s;
          }

          .search-box input:focus {
               outline: none;
               border-color: #5865F2;
          }

          .servers-grid {
               display: grid;
               grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
               gap: 1.5rem;
          }

          .server-card {
               background: #23272f;
               border: 2px solid #2b2f38;
               border-radius: 12px;
               padding: 1.5rem;
               transition: all 0.3s;
               cursor: pointer;
               text-decoration: none;
               color: inherit;
               display: block;
          }

          .server-card:hover {
               border-color: #5865F2;
               transform: translateY(-4px);
               box-shadow: 0 8px 24px rgba(88, 101, 242, 0.2);
          }

          .server-header {
               display: flex;
               align-items: center;
               gap: 1rem;
               margin-bottom: 1rem;
          }

          .server-icon {
               width: 64px;
               height: 64px;
               border-radius: 50%;
               background: #5865F2;
               display: flex;
               align-items: center;
               justify-content: center;
               font-size: 1.5rem;
               font-weight: 700;
               flex-shrink: 0;
          }

          .server-icon img {
               width: 100%;
               height: 100%;
               border-radius: 50%;
               object-fit: cover;
          }

          .server-info h3 {
               font-size: 1.125rem;
               margin-bottom: 0.25rem;
               white-space: nowrap;
               overflow: hidden;
               text-overflow: ellipsis;
          }

          .server-info p {
               color: #8b8f98;
               font-size: 0.875rem;
          }

          .server-stats {
               display: flex;
               gap: 1rem;
               margin-top: 1rem;
               padding-top: 1rem;
               border-top: 1px solid #2b2f38;
          }

          .server-stat {
               flex: 1;
               text-align: center;
          }

          .server-stat span {
               display: block;
               color: #8b8f98;
               font-size: 0.75rem;
               margin-bottom: 0.25rem;
          }

          .server-stat strong {
               color: #fff;
               font-size: 1rem;
          }

          .boost-badge {
               display: inline-block;
               padding: 0.25rem 0.5rem;
               background: #ff73fa;
               color: #fff;
               border-radius: 4px;
               font-size: 0.75rem;
               font-weight: 600;
               margin-left: 0.5rem;
          }

          .loading {
               text-align: center;
               padding: 4rem;
               color: #8b8f98;
          }

          .spinner {
               border: 3px solid #2b2f38;
               border-top: 3px solid #5865F2;
               border-radius: 50%;
               width: 40px;
               height: 40px;
               animation: spin 1s linear infinite;
               margin: 0 auto 1rem;
          }

          @keyframes spin {
               0% {
                    transform: rotate(0deg);
               }

               100% {
                    transform: rotate(360deg);
               }
          }

          .empty-state {
               text-align: center;
               padding: 4rem;
               color: #8b8f98;
          }

          .empty-state svg {
               width: 64px;
               height: 64px;
               margin-bottom: 1rem;
               opacity: 0.5;
          }
     </style>
</head>

<body>
     <div class="container">
          <div class="header">
               <h1>All Servers</h1>
               <a href="/dashboard/owner" class="back-btn">‚Üê Back to Dashboard</a>
          </div>

          <div class="stats">
               <div class="stat-card">
                    <h3>Total Servers</h3>
                    <p id="totalServers">-</p>
               </div>
               <div class="stat-card">
                    <h3>Total Members</h3>
                    <p id="totalMembers">-</p>
               </div>
               <div class="stat-card">
                    <h3>Largest Server</h3>
                    <p id="largestServer">-</p>
               </div>
          </div>

          <div class="search-box">
               <input type="text" id="searchInput" placeholder="Search servers...">
          </div>

          <div id="loading" class="loading">
               <div class="spinner"></div>
               <p>Loading servers...</p>
          </div>

          <div id="serversGrid" class="servers-grid" style="display: none;"></div>

          <div id="emptyState" class="empty-state" style="display: none;">
               <svg fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd"
                         d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                         clip-rule="evenodd" />
               </svg>
               <h3>No servers found</h3>
               <p>Try adjusting your search</p>
          </div>
     </div>

     <script>
          let allServers = [];

          async function loadServers() {
               try {
                    const response = await fetch('/api/owner/servers');
                    const data = await response.json();

                    if (data.success) {
                         allServers = data.servers;
                         renderServers(allServers);
                         updateStats(allServers);
                    } else {
                         throw new Error(data.error);
                    }
               } catch (error) {
                    console.error('Error loading servers:', error);
                    document.getElementById('loading').innerHTML = `
                    <p style="color: #f04747;">Failed to load servers: ${error.message}</p>
                `;
               }
          }

          function renderServers(servers) {
               const grid = document.getElementById('serversGrid');
               const loading = document.getElementById('loading');
               const emptyState = document.getElementById('emptyState');

               loading.style.display = 'none';

               if (servers.length === 0) {
                    grid.style.display = 'none';
                    emptyState.style.display = 'block';
                    return;
               }

               emptyState.style.display = 'none';
               grid.style.display = 'grid';

               grid.innerHTML = servers.map(server => {
                    const iconUrl = server.icon || null;
                    const iconHtml = iconUrl
                         ? `<img src="${iconUrl}" alt="${server.name}">`
                         : server.name.charAt(0).toUpperCase();

                    const boostBadge = server.boostTier > 0
                         ? `<span class="boost-badge">TIER ${server.boostTier}</span>`
                         : '';

                    const joinDate = new Date(server.joinedAt).toLocaleDateString();

                    return `
                    <a href="/dashboard/owner/servers/${server.id}" class="server-card">
                        <div class="server-header">
                            <div class="server-icon">${iconHtml}</div>
                            <div class="server-info">
                                <h3>${escapeHtml(server.name)}${boostBadge}</h3>
                                <p>Owner: ${escapeHtml(server.owner.username)}</p>
                            </div>
                        </div>
                        <div class="server-stats">
                            <div class="server-stat">
                                <span>Members</span>
                                <strong>${server.memberCount.toLocaleString()}</strong>
                            </div>
                            <div class="server-stat">
                                <span>Joined</span>
                                <strong>${joinDate}</strong>
                            </div>
                        </div>
                    </a>
                `;
               }).join('');
          }

          function updateStats(servers) {
               const totalMembers = servers.reduce((sum, s) => sum + s.memberCount, 0);
               const largest = servers.reduce((max, s) => s.memberCount > max.memberCount ? s : max, servers[0]);

               document.getElementById('totalServers').textContent = servers.length;
               document.getElementById('totalMembers').textContent = totalMembers.toLocaleString();
               document.getElementById('largestServer').textContent = largest ? largest.memberCount.toLocaleString() : '-';
          }

          function escapeHtml(text) {
               const map = {
                    '&': '&amp;',
                    '<': '&lt;',
                    '>': '&gt;',
                    '"': '&quot;',
                    "'": '&#039;'
               };
               return text.replace(/[&<>"']/g, m => map[m]);
          }

          // Search functionality
          document.getElementById('searchInput').addEventListener('input', (e) => {
               const search = e.target.value.toLowerCase();
               const filtered = allServers.filter(server =>
                    server.name.toLowerCase().includes(search) ||
                    server.owner.username.toLowerCase().includes(search)
               );
               renderServers(filtered);
          });

          // Load servers on page load
          loadServers();
     </script>
</body>

</html>
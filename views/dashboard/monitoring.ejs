<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guild.name %> - Server Monitoring</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'dark-primary': '#1a1d23',
                        'dark-secondary': '#23272f',
                        'dark-card': '#2b2f38',
                        'dark-hover': '#32363f',
                        'discord': '#5865F2',
                        'discord-hover': '#4752c4',
                        'text-primary': '#ffffff',
                        'text-secondary': '#b9bbbe',
                        'border-dark': '#3a3f4b'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-dark-primary text-text-primary min-h-screen">
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-12">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center space-x-3 mb-4">
                <a href="/dashboard" class="text-text-secondary hover:text-discord transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                <% if (guild.icon) { %>
                    <img src="https://cdn.discordapp.com/icons/<%= guild.guildId %>/<%= guild.icon %>.png" 
                         alt="<%= guild.name %>" 
                         class="w-12 h-12 rounded-lg">
                <% } else { %>
                    <div class="w-12 h-12 bg-discord rounded-lg flex items-center justify-center text-xl font-bold">
                        <%= guild.name.charAt(0).toUpperCase() %>
                    </div>
                <% } %>
                <div>
                    <h1 class="text-3xl font-bold"><%= guild.name %></h1>
                    <p class="text-text-secondary">Minecraft Server Monitoring</p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
            <!-- Sidebar Navigation -->
            <div class="lg:col-span-1">
                <nav class="bg-dark-card border border-border-dark rounded-lg p-4 sticky top-4">
                    <ul class="space-y-2">
                        <li>
                            <a href="/dashboard/guild/<%= guild.guildId %>" 
                               class="block px-4 py-2 rounded hover:bg-dark-hover transition-colors">
                                General Settings
                            </a>
                        </li>
                        <li>
                            <a href="/dashboard/guild/<%= guild.guildId %>/prayer" 
                               class="block px-4 py-2 rounded hover:bg-dark-hover transition-colors">
                                Prayer Times
                            </a>
                        </li>
                        <li>
                            <a href="/dashboard/guild/<%= guild.guildId %>/monitoring" 
                               class="block px-4 py-2 rounded bg-discord text-white font-semibold">
                                Server Monitoring
                            </a>
                        </li>
                        <li>
                            <a href="/dashboard/guild/<%= guild.guildId %>/rules" 
                               class="block px-4 py-2 rounded hover:bg-dark-hover transition-colors">
                                Rules Management
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-3">
                <form action="/api/guild/<%= guild.guildId %>/monitoring" method="POST" class="space-y-6">
                    <!-- Enable/Disable -->
                    <div class="bg-dark-card border border-border-dark rounded-lg p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <h2 class="text-xl font-bold mb-1">Server Monitoring</h2>
                                <p class="text-text-secondary text-sm">
                                    Monitor Minecraft server status dan kirim notifikasi
                                </p>
                            </div>
                            <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" 
                                       name="enabled" 
                                       value="true"
                                       <%= monitoring.enabled ? 'checked' : '' %>
                                       class="sr-only peer">
                                <div class="w-14 h-7 bg-dark-secondary peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-discord/20 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-[4px] after:bg-white after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-discord"></div>
                            </label>
                        </div>
                    </div>

                    <!-- Server Configuration -->
                    <div class="bg-dark-card border border-border-dark rounded-lg p-6">
                        <h2 class="text-xl font-bold mb-4">Server Configuration</h2>
                        <div class="space-y-4">
                            <div>
                                <label for="serverHost" class="block text-sm font-medium mb-2">Server Host/IP</label>
                                <input type="text" 
                                       id="serverHost" 
                                       name="serverHost" 
                                       value="<%= monitoring.serverHost || '' %>" 
                                       required
                                       class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                       placeholder="play.example.com">
                            </div>
                            <div>
                                <label for="serverPort" class="block text-sm font-medium mb-2">Server Port</label>
                                <input type="number" 
                                       id="serverPort" 
                                       name="serverPort" 
                                       value="<%= monitoring.serverPort || 25565 %>" 
                                       required
                                       min="1"
                                       max="65535"
                                       class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                       placeholder="25565">
                            </div>
                            <div>
                                <label for="serverName" class="block text-sm font-medium mb-2">Server Name (Display)</label>
                                <input type="text" 
                                       id="serverName" 
                                       name="serverName" 
                                       value="<%= monitoring.serverName || '' %>" 
                                       class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                       placeholder="My Minecraft Server">
                            </div>
                        </div>
                    </div>

                    <!-- Monitoring Settings -->
                    <div class="bg-dark-card border border-border-dark rounded-lg p-6">
                        <h2 class="text-xl font-bold mb-4">Monitoring Settings</h2>
                        <div class="space-y-4">
                            <div>
                                <label for="channelId" class="block text-sm font-medium mb-2">Notification Channel</label>
                                <input type="text" 
                                       id="channelId" 
                                       name="channelId" 
                                       value="<%= monitoring.channelId || '' %>" 
                                       required
                                       class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                       placeholder="123456789012345678">
                                <p class="text-text-secondary text-sm mt-2">
                                    Channel untuk notifikasi status server
                                </p>
                            </div>
                            <div>
                                <label for="checkInterval" class="block text-sm font-medium mb-2">Check Interval (minutes)</label>
                                <input type="number" 
                                       id="checkInterval" 
                                       name="checkInterval" 
                                       value="<%= monitoring.checkInterval || 5 %>" 
                                       required
                                       min="1"
                                       max="60"
                                       class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                       placeholder="5">
                                <p class="text-text-secondary text-sm mt-2">
                                    Berapa menit sekali bot akan check status server
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Notification Options -->
                    <div class="bg-dark-card border border-border-dark rounded-lg p-6">
                        <h2 class="text-xl font-bold mb-4">Notification Options</h2>
                        <div class="space-y-3">
                            <label class="flex items-center space-x-3 cursor-pointer">
                                <input type="checkbox" 
                                       name="notifyOnline" 
                                       value="true"
                                       <%= monitoring.notifyOnline ? 'checked' : '' %>
                                       class="w-5 h-5 bg-dark-secondary border-border-dark rounded focus:ring-discord">
                                <div>
                                    <span class="block">Notify when server comes online</span>
                                    <span class="text-sm text-text-secondary">Kirim notifikasi ketika server online kembali</span>
                                </div>
                            </label>
                            <label class="flex items-center space-x-3 cursor-pointer">
                                <input type="checkbox" 
                                       name="notifyOffline" 
                                       value="true"
                                       <%= monitoring.notifyOffline ? 'checked' : '' %>
                                       class="w-5 h-5 bg-dark-secondary border-border-dark rounded focus:ring-discord">
                                <div>
                                    <span class="block">Notify when server goes offline</span>
                                    <span class="text-sm text-text-secondary">Kirim notifikasi ketika server offline</span>
                                </div>
                            </label>
                            <label class="flex items-center space-x-3 cursor-pointer">
                                <input type="checkbox" 
                                       name="notifyPlayerCount" 
                                       value="true"
                                       <%= monitoring.notifyPlayerCount ? 'checked' : '' %>
                                       class="w-5 h-5 bg-dark-secondary border-border-dark rounded focus:ring-discord">
                                <div>
                                    <span class="block">Notify on player count changes</span>
                                    <span class="text-sm text-text-secondary">Kirim notifikasi ketika ada player join/leave</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <!-- Current Status (Read-only) -->
                    <% if (monitoring.enabled && monitoring.lastChecked) { %>
                        <div class="bg-dark-card border border-border-dark rounded-lg p-6">
                            <h2 class="text-xl font-bold mb-4">Current Status</h2>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                <div>
                                    <p class="text-text-secondary text-sm mb-1">Status</p>
                                    <p class="text-lg font-semibold">
                                        <% if (monitoring.isOnline) { %>
                                            <span class="text-green-500">● Online</span>
                                        <% } else { %>
                                            <span class="text-red-500">● Offline</span>
                                        <% } %>
                                    </p>
                                </div>
                                <div>
                                    <p class="text-text-secondary text-sm mb-1">Players</p>
                                    <p class="text-lg font-semibold"><%= monitoring.currentPlayers || 0 %>/<%= monitoring.maxPlayers || 0 %></p>
                                </div>
                                <div>
                                    <p class="text-text-secondary text-sm mb-1">Version</p>
                                    <p class="text-lg font-semibold"><%= monitoring.version || 'N/A' %></p>
                                </div>
                                <div>
                                    <p class="text-text-secondary text-sm mb-1">Last Checked</p>
                                    <p class="text-lg font-semibold text-text-secondary text-sm">
                                        <%= new Date(monitoring.lastChecked).toLocaleString() %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    <% } %>

                    <!-- Submit Button -->
                    <div class="flex justify-end space-x-4">
                        <a href="/dashboard/guild/<%= guild.guildId %>" 
                           class="px-6 py-3 bg-dark-card border border-border-dark hover:bg-dark-hover rounded-lg transition-colors">
                            Cancel
                        </a>
                        <button type="submit" 
                                class="px-6 py-3 bg-discord hover:bg-discord-hover text-white font-semibold rounded-lg transition-colors">
                            Save Monitoring Settings
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guild.name %> - Settings</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'dark-primary': '#1a1d23',
                        'dark-secondary': '#23272f',
                        'dark-card': '#2b2f38',
                        'dark-hover': '#32363f',
                        'discord': '#5865F2',
                        'discord-hover': '#4752c4',
                        'text-primary': '#ffffff',
                        'text-secondary': '#b9bbbe',
                        'border-dark': '#3a3f4b'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-dark-primary text-text-primary min-h-screen">
    <%- include('../partials/navbar') %>

    <main class="container mx-auto px-4 py-12">
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center space-x-3 mb-4">
                <a href="/dashboard" class="text-text-secondary hover:text-discord transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                <% if (guild.icon) { %>
                    <img src="https://cdn.discordapp.com/icons/<%= guild.guildId %>/<%= guild.icon %>.png" 
                         alt="<%= guild.name %>" 
                         class="w-12 h-12 rounded-lg">
                <% } else { %>
                    <div class="w-12 h-12 bg-discord rounded-lg flex items-center justify-center text-xl font-bold">
                        <%= guild.name.charAt(0).toUpperCase() %>
                    </div>
                <% } %>
                <div>
                    <h1 class="text-3xl font-bold"><%= guild.name %></h1>
                    <p class="text-text-secondary">Server Settings</p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
            <!-- Sidebar Navigation -->
            <div class="lg:col-span-1">
                <nav class="bg-dark-card border border-border-dark rounded-lg p-4 sticky top-4">
                    <ul class="space-y-2">
                        <li>
                            <a href="/dashboard/guild/<%= guild.guildId %>" 
                               class="block px-4 py-2 rounded bg-discord text-white font-semibold">
                                General Settings
                            </a>
                        </li>
                        <li>
                            <a href="/dashboard/guild/<%= guild.guildId %>/prayer" 
                               class="block px-4 py-2 rounded hover:bg-dark-hover transition-colors">
                                Prayer Times
                            </a>
                        </li>
                        <li>
                            <a href="/dashboard/guild/<%= guild.guildId %>/monitoring" 
                               class="block px-4 py-2 rounded hover:bg-dark-hover transition-colors">
                                Server Monitoring
                            </a>
                        </li>
                        <li>
                            <a href="/dashboard/guild/<%= guild.guildId %>/rules" 
                               class="block px-4 py-2 rounded hover:bg-dark-hover transition-colors">
                                Rules Management
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-3">
                <!-- Success/Error Messages -->
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="bg-green-500/20 border border-green-500 text-green-500 rounded-lg p-4 mb-6">
                        <%= success %>
                    </div>
                <% } %>
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="bg-red-500/20 border border-red-500 text-red-500 rounded-lg p-4 mb-6">
                        <%= error %>
                    </div>
                <% } %>

                <!-- General Settings Form -->
                <form action="/api/guild/<%= guild.guildId %>/settings" method="POST" class="space-y-6">
                    <!-- Prefix Setting -->
                    <div class="bg-dark-card border border-border-dark rounded-lg p-6">
                        <h2 class="text-xl font-bold mb-4">Bot Prefix</h2>
                        <div>
                            <label for="prefix" class="block text-sm font-medium mb-2">Command Prefix</label>
                            <input type="text" 
                                   id="prefix" 
                                   name="prefix" 
                                   value="<%= settings.prefix || '!' %>" 
                                   maxlength="5"
                                   class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                   placeholder="!">
                            <p class="text-text-secondary text-sm mt-2">
                                Prefix yang digunakan untuk command bot (contoh: ! atau ?)
                            </p>
                        </div>
                    </div>

                    <!-- Welcome Message -->
                    <div class="bg-dark-card border border-border-dark rounded-lg p-6">
                        <h2 class="text-xl font-bold mb-4">Welcome Message</h2>
                        <div class="space-y-4">
                            <div>
                                <label for="welcomeChannelId" class="block text-sm font-medium mb-2">Welcome Channel</label>
                                <input type="text" 
                                       id="welcomeChannelId" 
                                       name="welcomeChannelId" 
                                       value="<%= settings.welcomeChannelId || '' %>" 
                                       class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                       placeholder="Channel ID">
                                <p class="text-text-secondary text-sm mt-2">
                                    ID channel untuk mengirim welcome message
                                </p>
                            </div>
                            <div>
                                <label for="welcomeMessage" class="block text-sm font-medium mb-2">Welcome Message</label>
                                <textarea id="welcomeMessage" 
                                          name="welcomeMessage" 
                                          rows="4"
                                          class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                          placeholder="Welcome {user} to {server}!"><%= settings.welcomeMessage || '' %></textarea>
                                <p class="text-text-secondary text-sm mt-2">
                                    Use {user} untuk mention user dan {server} untuk nama server
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Moderation Settings -->
                    <div class="bg-dark-card border border-border-dark rounded-lg p-6">
                        <h2 class="text-xl font-bold mb-4">Moderation</h2>
                        <div class="space-y-4">
                            <div>
                                <label for="modLogChannelId" class="block text-sm font-medium mb-2">Mod Log Channel</label>
                                <input type="text" 
                                       id="modLogChannelId" 
                                       name="modLogChannelId" 
                                       value="<%= settings.modLogChannelId || '' %>" 
                                       class="w-full bg-dark-secondary border border-border-dark rounded-lg px-4 py-2 focus:outline-none focus:border-discord transition-colors"
                                       placeholder="Channel ID">
                                <p class="text-text-secondary text-sm mt-2">
                                    Channel untuk log moderation actions
                                </p>
                            </div>
                            <div class="flex items-center">
                                <input type="checkbox" 
                                       id="autoModEnabled" 
                                       name="autoModEnabled" 
                                       value="true"
                                       <%= settings.autoModEnabled ? 'checked' : '' %>
                                       class="w-5 h-5 bg-dark-secondary border-border-dark rounded focus:ring-discord">
                                <label for="autoModEnabled" class="ml-3 text-sm">
                                    Enable Auto-Moderation
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="flex justify-end space-x-4">
                        <a href="/dashboard" 
                           class="px-6 py-3 bg-dark-card border border-border-dark hover:bg-dark-hover rounded-lg transition-colors">
                            Cancel
                        </a>
                        <button type="submit" 
                                class="px-6 py-3 bg-discord hover:bg-discord-hover text-white font-semibold rounded-lg transition-colors">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
        // Form submission with AJAX
        document.querySelector('form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);
            
            // Convert FormData to JSON
            const data = {};
            formData.forEach((value, key) => {
                if (key === 'autoModEnabled') {
                    data[key] = true;
                } else {
                    data[key] = value;
                }
            });
            
            try {
                const response = await fetch(form.action, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Show success message
                    window.location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Failed to save settings');
                console.error(error);
            }
        });
    </script>
</body>
</html>

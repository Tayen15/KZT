        <!-- Features Section -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <h2 class="text-3xl font-bold text-center mb-12">Key Features</h2>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
                    <!-- Feature Card 1 -->
                    <div
                        class="bg-dark-card border border-border-dark rounded-lg p-6 hover:border-discord transition-all duration-200">
                        <h3 class="text-xl font-bold text-discord mb-3">Music Streaming</h3>
                        <p class="text-text-secondary">24/7 lofi music streaming with automatic reconnection and session
                            management</p>
                    </div>

                    <!-- Feature Card 2 -->
                    <div
                        class="bg-dark-card border border-border-dark rounded-lg p-6 hover:border-discord transition-all duration-200">
                        <h3 class="text-xl font-bold text-discord mb-3">Prayer Times</h3>
                        <p class="text-text-secondary">Automated prayer time notifications for multiple locations with
                            custom messages</p>
                    </div>

                    <!-- Feature Card 3 -->
                    <div
                        class="bg-dark-card border border-border-dark rounded-lg p-6 hover:border-discord transition-all duration-200">
                        <h3 class="text-xl font-bold text-discord mb-3">Server Monitoring</h3>
                        <p class="text-text-secondary">Monitor Minecraft servers with real-time status updates and
                            player counts</p>
                    </div>

                    <!-- Feature Card 4 -->
                    <div
                        class="bg-dark-card border border-border-dark rounded-lg p-6 hover:border-discord transition-all duration-200">
                        <h3 class="text-xl font-bold text-discord mb-3">Web Dashboard</h3>
                        <p class="text-text-secondary">Complete web-based configuration with Discord OAuth
                            authentication</p>
                    </div>

                    <!-- Feature Card 5 -->
                    <div
                        class="bg-dark-card border border-border-dark rounded-lg p-6 hover:border-discord transition-all duration-200">
                        <h3 class="text-xl font-bold text-discord mb-3">Moderation Tools</h3>
                        <p class="text-text-secondary">Ban, kick, and message clearing with permission-based access
                            control</p>
                    </div>

                </div>
            </div>
        </section>

        <%- include('partials/footer') %>
